<Window x:Class="InvoiceForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox x:Name="ItemsGridBox" Header="Items" Height="NaN" Margin="10,10,10,10" Width="NaN">
            <StackPanel Orientation="Horizontal" Margin="0,0,-2,0" Width="NaN">
                <DataGrid x:Name="DisplayItemsDataGrid" Height="390" IsReadOnly="True" Width="542"/>
                <Button x:Name="SearchBtn" Content="Search" Width="95" Click="SearchBtn_Click" Height="41"/>
                <Button x:Name="EditItemsBtn" Content="Edit Items" Width="97" Click="EditItemsBtn_Click" VerticalAlignment="Center" Height="41"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
